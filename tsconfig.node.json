{
  "compilerOptions": {
    "lib": ["ES2022"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "cli/**/*.ts",
    "server/**/*.ts",
    "service/**/*.ts",
    "shared/**/*.ts",
    "test/**/*.ts"
  ]
}
