{
  "name": "relay-tty",
  "version": "1.5.0",
  "description": "Terminal relay â€” run commands locally, access them from anywhere via browser",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddrscott/relay-tty.git"
  },
  "homepage": "https://github.com/ddrscott/relay-tty",
  "keywords": [
    "terminal",
    "tty",
    "pty",
    "relay",
    "xterm",
    "websocket",
    "remote-terminal"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "relay": "dist/cli/index.js",
    "relay-tty": "dist/cli/index.js"
  },
  "files": [
    "dist/",
    "build/",
    "scripts/",
    "server.js"
  ],
  "scripts": {
    "dev": "npm run build:rust; tsc -p tsconfig.node.json && node server.js",
    "build": "npm run build:rust; react-router build && tsc -p tsconfig.node.json",
    "start": "NODE_ENV=production node server.js",
    "build:cli": "tsc -p tsconfig.node.json",
    "build:rust": "command -v cargo >/dev/null 2>&1 && cargo build --release --manifest-path crates/pty-host/Cargo.toml || true",
    "prepack": "npm run build",
    "test": "tsc -p tsconfig.node.json && node --test dist/test/*.test.js",
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/*/spawn-helper 2>/dev/null; node scripts/postinstall.js || true"
  },
  "dependencies": {
    "@react-router/express": "^7.12.0",
    "@react-router/node": "^7.12.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-webgl": "0.18.0",
    "commander": "^13.1.0",
    "compression": "^1.8.0",
    "cookie": "^1.0.0",
    "express": "^5.1.0",
    "isbot": "^5.1.0",
    "lucide-react": "^0.575.0",
    "morgan": "^1.10.0",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.12.0",
    "@tailwindcss/vite": "^4.1.0",
    "@types/compression": "^1.7.0",
    "@types/cookie": "^0.6.0",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^22.0.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.0",
    "@xterm/addon-fit": "0.10.0",
    "@xterm/addon-web-links": "0.11.0",
    "@xterm/xterm": "5.5.0",
    "daisyui": "^5.0.0",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.3.0"
  }
}
